# MedFayda Environment Configuration Template
# Copy this file to .env and update the values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=medfayda
DB_USER=medfayda_user
DB_PASSWORD=fayda2017

# Alternative: Full database URL (overrides individual settings above)
# DATABASE_URL=postgresql://medfayda_user:fayda2017@localhost:5432/medfayda

# Database Options
SYNC_DATABASE=false
DB_LOGGING=false

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_MAX_AGE=86400000

# Fayda ID OIDC Configuration (Production)
FAYDA_OIDC_ISSUER=https://fayda.gov.et/auth
FAYDA_OIDC_CLIENT_ID=your-fayda-client-id
FAYDA_OIDC_CLIENT_SECRET=your-fayda-client-secret
FAYDA_OIDC_REDIRECT_URI=http://localhost:5000/api/auth/fayda/callback

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@medfayda.et

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
ENABLE_HELMET=true
ENABLE_CORS=true

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Logging Configuration
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true
LOG_DIRECTORY=logs

# Health Check
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development Mode Settings (only for development)
ENABLE_MOCK_AUTH=true
ENABLE_DEBUG_ROUTES=true
DISABLE_AUTH_MIDDLEWARE=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# SSL/TLS Configuration (Production only)
ENABLE_HTTPS=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Redis Configuration (Production caching/sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# ETHIOPIAN HEALTH SYSTEM INTEGRATION
# =============================================================================
# Ministry of Health API
MOH_API_BASE_URL=https://api.moh.gov.et
MOH_API_KEY=your-moh-api-key

# Health Centers Registry
HEALTH_CENTERS_API_URL=https://registry.moh.gov.et/api
HEALTH_CENTERS_API_KEY=your-registry-api-key

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
# Database Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.
